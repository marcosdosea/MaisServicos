@model MaisServicosWeb.Models.ClienteViewModel

<h4>Novo Cliente</h4>
<hr />
<div class="container p-10">
    <div class="row">
        <div class="col-md-6">
            <h5>Dados pessoais</h5>
            <form asp-action="Create" id="border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-10 m-2">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control border border-primary" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-10 m-2">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control border border-primary" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-9 m-2">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control border border-primary" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="form-group col-4 m-2">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control border border-primary" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </form>        
        </div>
        <div class="col-md-6">
            <h5>Endereço</h5>
            <div class="form-group col-3 m-2">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control border border-primary" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group col-7 m-2">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control border border-primary" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-3 m-2">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control border border-primary" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group col-6 m-2">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" class="form-control border border-primary" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6 m-2">
                    <label asp-for="Rua" class="control-label"></label>
                    <input asp-for="Rua" class="form-control border border-primary" />
                    <span asp-validation-for="Rua" class="text-danger"></span>
                </div>
                <div class="form-group col-4 m-2">
                    <label asp-for="Numero" class="control-label"></label>
                    <input asp-for="Numero" class="form-control border border-primary" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
            </div>
            <div class="container text-end">
                <input type="submit" value="Concluir" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
