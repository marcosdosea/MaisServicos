@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar-se";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<div class="container row" style="margin-top:5%">
    <div class="col-md-4">
        <div class="d-flex justify-content-center h-100">
            <section>
                <form class="form-floating" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                    <div class="input_box">
                        <div>
                            <h1 style="color: #007BFF">@ViewData["Title"]</h1>
                        </div>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="" style="width:400px">

                        <div style="margin-top:5%">
                            <label asp-for="Input.Email"></label>
                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>


                        <div style="margin-top:5%">
                            <label asp-for="Input.Password">Senha</label>
                            <div class="form-group">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>


                        <div style="margin-top:5%">
                            <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                            <div class="form-group">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div style="margin-top:5%">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Cadastrar</button>
                    </div>


                    <p class="text-center text-muted mt-5 mb-0">
                        Já tem uma conta? <a href="#!"
                                             class="fw-bold text-body"><u style="color: #007BFF">Entre aqui</u></a>
                    </p>


                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
